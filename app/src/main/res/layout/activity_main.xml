<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_height_in_meters"
        android:layout_marginTop="100sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="The current time "
        android:layout_marginLeft="-80sp"
        android:layout_marginTop="10sp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/subTime"
        android:layout_marginTop="-50sp"
        android:layout_marginLeft="100sp"
        android:onClick="onSubmitTime"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:text="Submit Time"/>


    <TextView
        android:id="@+id/total_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="@string/total_steps"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/steps_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_goal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_start"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginTop="20sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="@string/start_walk_run"/>

    <Button
        android:id="@+id/button_end"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginTop="20sp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:text="@string/end_walk_run"/>

    <Button
        android:id="@+id/newStepGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_step_goal"/>

    <TextView
        android:id="@+id/curr_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="@string/current_steps"/>

    <TextView
        android:id="@+id/time_elapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/time_elapsed"/>

    <TextView
        android:id="@+id/mph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/miles_per_hour"/>

    <Button
        android:id="@+id/button_weekly_stats"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="90sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:text="@string/weekly_snapshot"/>

</LinearLayout>
