<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_height"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/the_current_time"/>
            <Button
                android:id="@+id/subTime"
                android:onClick="onSubmitTime"
                android:layout_height="50dp"
                android:layout_width="150dp"
                android:text="@string/submit_time"/>
        </LinearLayout>


        <TextView
            android:id="@+id/total_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/total_steps"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/steps_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps_goal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_start"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_marginTop="20sp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:text="@string/start_walk_run"/>

        <Button
            android:id="@+id/button_end"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_marginTop="20sp"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:text="@string/end_walk_run"/>

        <Button
            android:id="@+id/newStepGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_step_goal"/>

        <TextView
            android:id="@+id/curr_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:text="@string/current_steps"/>

        <TextView
            android:id="@+id/time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/time_elapsed"/>

        <TextView
            android:id="@+id/mph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/miles_per_hour"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_weekly_stats"
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:text="@string/weekly_snapshot"/>
    </RelativeLayout>

</RelativeLayout>
